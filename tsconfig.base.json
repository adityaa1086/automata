{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/auth": ["libs/auth/src/index.ts"],
      "@libs/custom-types": ["libs/custom-types/src/index.ts"],
      "@libs/firestore-service": ["libs/firestore/src/index.ts"],
      "@libs/mock-data": ["libs/mock-data/src/index.ts"],
      "@tool-ai/flow-runner": ["libs/flow-runner/src/index.ts"],
      "@tool-ai/ui": ["libs/ui/src/index.ts"]
      "@tool-ai/state": ["libs/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
